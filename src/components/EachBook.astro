---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
    imagePath: string | ImageMetadata;
	title: string;
	link: string;
}

const { imagePath, title, link } = Astro.props

const imagePathAwaiting = await getImage({
    src: imagePath,
    format: "png",
});

---

<div class="col-5 each-book py-3">
    <a href={link} target="_blank">
        <div class="background-image">
        <div class="overlay"></div>
        <img class="more-round" src={imagePathAwaiting.src} alt={title}>
        <h4 class="title display-6">
            {title}
        </h4>
        </div>
    </a>
</div>